
{
    "manifest_version": 2,
    "name": "Netiquette",
    "description": "A Chrome extension to enhance web browsing with keyboard shortcuts and internet safety tips.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "bookmarks",
      "windows"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "commands": {
      "close-window": {
        "suggested_key": {
          "default": "Ctrl+Shift+U",
          "mac": "Command+Shift+U"
        },
        "description": "Close current window"
      },
      "bookmark-page": {
        "suggested_key": {
          "default": "Ctrl+D",
          "mac": "Command+D"
        },
        "description": "Bookmark current page"
      }
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/chrome16.png",
        "48": "images/chrome48.png",
        "128": "images/chrome128.png"
      }
    },
    "icons": {
      "16": "images/chrome16.png",
      "48": "images/chrome48.png",
      "128": "images/chrome128.png"
    },
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      "images/*"
    ]
  }
  